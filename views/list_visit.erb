<h2>Список записавшихся</h2>

<% if @client.size == 0 %>
  <%= "<p>Нет записей</p>" %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Имя</th>
      <th>Телефон</th>
      <th>Время записи</th>
      <th>Барбер</th>
      <th>Цвет</th>
    </tr>
  </thead>
  <tbody>
  <% @client.each do |client| %>
    <tr>
      <td><a href="/client/<%= client.id %>"><%= client.id %></a></td>
      <td><a href="/client/<%= client.id %>"><%= client.name %></a></td>
      <td><%= client.phone %></td>
      <td><%= client.datestamp %></td>
      <td><%= client.barber %></td>
      <td style="background-color: <%= client.color %>"></td>
    </tr>
  <% end %>
  </tbody>

</table>